#title
  border-top: 1px solid title-border-gray
  padding: 70px 0 50px

  h1
    color: seafoam
    text-transform: uppercase
    font-size: 4.5em
    padding: 15px 0

  h2
    text-transform: uppercase
    font-size: 2em
    color: gray
    padding: 15px 0
    font-weight: 500

  h3
    font-size: 1.55em
    color: gray
    font-weight: normal
    text-transform: uppercase
    padding-bottom: 40px
    border-bottom: none

  hr
    max-width: 100px
    border-top: 1px
    border-color: seafoam
