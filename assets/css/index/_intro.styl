#intro
  position: relative
  max-width: 800px
  margin: 0 auto
  group()
  padding: 70px 20px

  img
    max-width: 270px
    float: left
    padding-right: 20px

  .intro
    float: left
    max-width: 530px
    padding: 0 0 0 45px
    absolute: top 50% right 0
    transform: translateY(-50%)

  p
    font-size: 1.55em
    line-height: 1.7em
    padding: 5px 0

  +below('m')
    padding: 35px 20px

    img
      float: none
      display: block
      margin: 0 auto

    .intro
      position: static
      float: none
      margin: 0 auto
      padding-left: 0
      transform: translateY(0%)
      padding: 20px 0
