#banner
  background-image: url('/img/bg.jpg')
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  text-align: center

  .contain
    max-width: 400px
    margin: 0 auto
    padding: 96px 0

  h3
    color: seafoam
    text-transform: uppercase
    font-size: 1.5em
    letter-spacing: 0.1em
    padding: 1px 0
    font-size: 2em

  h2
    text-transform: uppercase
    font-size: 2.4em
    color: white
    padding: 1px 0
    letter-spacing: 0.1em

  p
    font-size: 1.7em
    padding: 5px 0
    line-height: 1.5em
    padding: 10px 0
    color: banner-gray

  a
    button(seafoam)
    margin: 40px auto 0
    max-width: 124px

  +below('s')
    .contain
      padding: 55px 20px
