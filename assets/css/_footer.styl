footer
  background-image: url('/img/bottom-bg.jpg')
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  text-align: center
  padding: 50px 0

  h2
    color: white
    text-transform: uppercase
    font-size: 2em
    padding: 15px 0
    letter-spacing: 0.1em

  p
    color: banner-gray
    font-size: 1.6em
    font-weight: bold
    padding: 15px 0

  a
    color: banner-gray
    hover-darken()
    transition: color .5s

  span
    color: seafoam

  ul
    inline-list(10)
    inline-block()
    padding: 15px 0

    img
      social-icon-width = 40px
      size: social-icon-width (social-icon-width / 2)


  +below('s')
    padding: 25px 0
