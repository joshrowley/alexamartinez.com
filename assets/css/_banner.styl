#banner
  background-image: url('/img/bg.png')
  background-position: center
  background-size: cover
  text-align: center

  .contain
    max-width: 400px
    margin: 0 auto
    padding: 96px 0

  h3
    color: seafoam
    text-transform: uppercase
    font-size: 1.5em
    margin: 0
    letter-spacing: 0.1em
    padding: 1px 0
    font-size: 2em

  h2
    text-transform: uppercase
    font-size: 2.4em
    margin: 0
    color: white
    padding: 1px 0
    letter-spacing: 0.1em

  p
    font-size: 1.7em
    padding: 5px 0
    line-height: 1.5em
    padding: 10px 0
    margin: 0

  a
    display: block
    max-width: 124px
    line-height: 34px
    border: 1px solid seafoam
    margin: 40px auto 0
    color: seafoam
    text-transform: uppercase
    font-size: 1.4em
    transition: color .5s
    hover-darken()
