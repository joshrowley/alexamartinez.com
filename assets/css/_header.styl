header
  padding: 44px 20px

  .logo
    max-width: 60px
    float: left

  h1
    float: left
    line-height: 35px
    padding-left: 15px
    color: gray
    letter-spacing: 0.05em
    text-transform: uppercase
    font-size: 1.8em
    hover-darken()
    transition: color .5s

  nav
    float: right
    text-transform: uppercase

  .wrap
    group()

  nav
    ul
      inline-list(28px)
    a
      color: seafoam
      font-weight: 500
      font-size: 1.3em
      hover-darken()
      transition: color .5s
      line-height: 35px

  +below('s')
    a
      text-align: center
      display: block
      width: 100%
      group()

    nav
      float: none
      padding-top: 10px
